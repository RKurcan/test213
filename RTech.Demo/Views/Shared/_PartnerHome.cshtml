<div>
    <style>
        #Calander {
            height: 340px;
        }
    </style>
    <section class="content-header">
        <h1>
            @T("Dashboard")
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> @T("Home")</a></li>
            <li class="active">@T("Dashboard")</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="box box-default">
            <div class="box-body">
                <div class="row" data-bind="with:DeviceInfo">
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-aqua"><i class="fa fa-home"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Stocks</span>
                                <span class="info-box-number" data-bind="text:ResellerDeviceCount"></span>
                                <a class="text-blue" href="#" data-bind="kendoWindowGrid:$root.KendoGridOptionsForStockDevice('@T("Stock Device")','#stockDeviceWindow')">More info</a>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                    <!-- /.col -->
                    <!-- /.col -->
                    <!-- fix for small devices only -->
                    <div class="clearfix visible-sm-block"></div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-green"><i class="fa fa-user"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Customer</span>
                                <span class="info-box-number" data-bind="text:CustomerDeviceCount"></span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-yellow"><i class="fa fa-warning"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Damaged</span>
                                <span class="info-box-number" data-bind="text:DamageDeviceCount"></span>
                                <a class="text-blue" href="#" data-bind="kendoWindowGrid:$root.KendoGridOptionsForDamageDevice('@T("Stock Device")','#damageDeviceWindow')">More info</a>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                    <!-- /.col -->
                </div>
            </div>
        </div>
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Customers</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-12" data-bind="kendoGrid:KendoGridOptions">
                        <div id="customerKendoGrid">

                        </div>
                    </div>
                </div>
                @*<div class="table-responsive">
                        <table class="table no-margin">
                            <thead>
                                <tr>
                                    <th>S.NO</th>
                                    <th>Customer</th>
                                    <th>Address</th>
                                    <th>Quantity</th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach:CompanyLst">

                                <tr>
                                    <td data-bind="text:$index()+1"></td>
                                    <td data-bind="text:Name"></td>
                                    <td data-bind="text:Address"></td>
                                    <td data-bind="text:Quantity"></td>
                                </tr>

                            </tbody>
                        </table>
                    </div>*@
                <!-- /.table-responsive -->
            </div>
        </div>
        <div id="stockDeviceWindow">
            <div>

            </div>
        </div>
        <div id="damageDeviceWindow">
            <div>

            </div>
        </div>
    </section>
</div>
@section scripts{
    <script src="~/Controllers/Scripts/Riddhasoft.Home.Model.js"></script>
    <script src="~/Controllers/Scripts/Riddhasoft.Home.Controller.js"></script>
    <script type="text/javascript">
        ko.cleanNode(document.getElementById("partial-render"));
        var partnerObj = new resellerHomeController();
        ko.applyBindings(partnerObj, document.getElementById("partial-render"));
    </script>

}




