@{
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout_Adminlte.cshtml";
}

<div class="error-page">
    <h2 class="headline text-red">@T("NoPermission")</h2>
    <div class="error-content">
        <h3><i class="fa fa-warning text-red"></i> @T("OopsNoPermission")</h3>
        <p>
            @T("NoAuthorization")
            @T("ContactYourAdmin")&nbsp;<a href="/Home/Index">@T("ReturnToDashboard")</a>
        </p>
        <form class="search-form">
            <div class="input-group">
                <img class="img-rounded with-border " style="cursor:pointer" width="100" height="100" src="~/Images/crying.png" />
            </div>
            <!-- /.input-group -->
        </form>
    </div>
</div>
