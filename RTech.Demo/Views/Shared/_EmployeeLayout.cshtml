    <script>
        var config = new Riddha.config();
        function updateUrl(title, that) {

            window.history.pushState("object or string", title, that.href);
            setTimeout(function () {
                $("#partial-render").fadeIn(200);
            }, 100);
            function complete() {

            }
        };
        function ajaxSuccess(data) {
            if (data.Status == 4) {
                $("#changePasswordModal").modal('hide');
            }
            return Riddha.UI.Toast(data.Message, data.Status);
        }
        $(document).ajaxStart(function () { Pace.restart(); });
        $(document).ajaxStop(function () {
            setTimeout(function () {
                hidePace();
            }, 100);
        });
        $('.treeview-menu li a').click(function () {
            $("#partial-render").fadeOut(100);
        });
        $(document).ready(function () {
            hidePace();

            if (config.CurrentOperationDate == "ne") {
                $("#opDateEn").removeAttr("checked");
                $("#opDateNe").attr("checked", "checked");
            }
            else {
                $("#opDateNe").removeAttr("checked");
                $("#opDateEn").attr("checked", "checked");
            }
            if (config.CurrentLanguage == "ne") {
                $("#opLangEn").removeAttr("checked");
                $("#opLangNe").attr("checked", "checked");
            }
            else {
                $("#opLangNe").removeAttr("checked");
                $("#opLangEn").attr("checked", "checked");
            }
        });
        $(".wrapper").on("change", "#opDateNe", function () {
            if (config.CurrentOperationDate == "ne") {
                return false;
            }
            Riddha.ajax.get("/Api/CommonApi/SetCurrentOpDate?opDate=ne")
            .done(function () {
                $("#opDateEn").removeAttr("checked");
                Riddha.UI.Confirm("SettingConfirm", function () {
                    location.reload();
                });
            });
        })
        $(".wrapper").on("change", "#opDateEn", function () {
            if (config.CurrentOperationDate == "en") {
                return false;
            }
            Riddha.ajax.get("/Api/CommonApi/SetCurrentOpDate?opDate=en")
            .done(function () {
                $("#opDateNe").removeAttr("checked");
                Riddha.UI.Confirm("SettingConfirm", function () {
                    location.reload();
                });
            });
        })
        $(".wrapper").on("change", "#opLangNe", function () {
            if (config.CurrentLanguage == "ne") {
                return false;
            }
            Riddha.ajax.get("/Api/CommonApi/SetCurrentLanguage?lang=ne")
            .done(function () {
                $("#opLangEn").removeAttr("checked");
                Riddha.UI.Confirm("SettingConfirm", function () {
                    location.reload();
                });
            });
        })
        $(".wrapper").on("change", "#opLangEn", function () {
            if (config.CurrentLanguage == "en") {
                return false;
            }
            Riddha.ajax.get("/Api/CommonApi/SetCurrentLanguage?lang=en")
            .done(function () {
                $("#opLangNe").removeAttr("checked");
                Riddha.UI.Confirm("SettingConfirm", function () {
                    location.reload();
                });
            });
        })
        function hidePace() {
            $('.pace.pace-active').removeClass('pace-active').addClass('pace-inactive')
        }
    </script>
    <script>
        function startTime() {
            var today = new Date();
            var h = today.getHours();
            var m = today.getMinutes();
            var s = today.getSeconds();
            var ampm = h >= 12 ? 'pm' : 'am';
            m = checkTime(m);
            s = checkTime(s);
            h = h % 12;
            h = h ? h : 12;
            document.getElementById('txt').innerHTML =
            h + ":" + m + ":" + s + ' ' + ampm;
            var t = setTimeout(startTime, 500);

        }
        function checkTime(i) {
            if (i < 10) { i = "0" + i };  // add zero in front of numbers < 10
            return i;
        }
        document.body.addEventListener("keydown", function (ev) {
            // do some stuff
            if (ev.altKey == true) {
                if (ev.keyCode == 76) {
                    window.open("/user/user/lockscreen", "_self")
                }
            }
            return false; // cancels this function only
        });
    </script>
