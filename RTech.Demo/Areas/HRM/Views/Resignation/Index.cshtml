@{
    ViewBag.Title = "Index";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout_Adminlte.cshtml";
}
<section class="content-header">
    <h1>
        @T("Bank")
        <sup class="text-green">@T("Creation")</sup>

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @T("Home")</a></li>
        <li class="active">@T("Bank")</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="modal" id="contractViewModel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <header><h4 class="text-green" data-bind="text:'Contract For: '+SelectedContract().EmployeeName()"></h4> </header>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal" data-bind="with:Contract">
                        <div class="form-group col-lg-12">
                            <label class="col-lg-4 control-label" for="Number">@T("Code") :</label>
                            <div class="col-lg-6">
                                <label class=" control-label " data-bind="text:Code"></label>
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-4 control-label" for="Number">@T("Employee") :</label>
                            <div class="col-lg-6">
                                <label class=" control-label " data-bind="text:EmployeeName"></label>
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-4 control-label" for="Number">@T("EmploymentStatus") :</label>
                            <div class="col-lg-6">
                                <label class=" control-label " data-bind="text:EmploymentStatusName"></label>
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-4 control-label" for="Number">@T("Period"):</label>
                            <div class="col-lg-6">
                                <label class=" control-label " data-bind="text:Period"></label>
                            </div>
                        </div>
                    </div>
                    &nbsp;
                    <div class="form-group col-lg-12 text-center">
                        <input type="submit" data-bind="click:$root.Approve,actionVisibility:'7110'" name="Save" class="btn btn-success action" value=@T("Approve") />
                        <input type="button" data-bind="click:$root.CloseModal" value=@T("Back") class="btn btn-default" />
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" id="resignationViewModel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <header><h4 class="text-green" data-bind="text:'Resignation For: '+SelectedResignation().EmployeeName()"></h4> </header>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal" data-bind="with:Resignation">
                        <div class="form-group col-lg-12">
                            <label class="col-lg-4 control-label" for="Number">@T("Code") :</label>
                            <div class="col-lg-6">
                                <label class=" control-label " data-bind="text:Code"></label>
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-4 control-label" for="Number">@T("Employee") :</label>
                            <div class="col-lg-6">
                                <label class=" control-label " data-bind="text:EmployeeName"></label>
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-4 control-label" for="Number">@T("NoticeDate") :</label>
                            <div class="col-lg-6">
                                <label class=" control-label " data-bind="text:NoticeDate"></label>
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-4 control-label" for="Number">@T("DesiredResignDate"):</label>
                            <div class="col-lg-6">
                                <label class=" control-label " data-bind="text:DesiredResignDate"></label>
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-4 control-label" for="Number">@T("Reason"):</label>
                            <div class="col-lg-6">
                                <label class=" control-label " data-bind="text:Reason"></label>
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-4 control-label" for="Number">@T("Details"):</label>
                            <div class="col-lg-6">
                                <label class=" control-label " data-bind="text:Details"></label>
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <label class="col-lg-4 control-label" for="Number">@T("ForwardTo"):</label>
                            <div class="col-lg-6">
                                <label class=" control-label " data-bind="text:ForwardToName"></label>
                            </div>
