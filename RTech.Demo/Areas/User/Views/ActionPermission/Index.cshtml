@{
    ViewBag.Title = "Index";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout_Adminlte.cshtml";
}
<section class="content-header">
    <h1>
        Action
        <small>Management</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Setup</li>
        <li class="active">Action Management</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    &nbsp;
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool dropdown-toggle text-blue" data-toggle="dropdown" data-bind="" style="">
                            <i class="fa fa-save"></i> Save
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <div class="btn-group">

                            <button type="button" class="btn btn-box-tool dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-wrench"></i>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Add New Action</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                            </ul>
                        </div>
                        <button type="button" class="btn btn-box-tool text-red" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="box-body" data-bind="with:ActionPermission">
                    <div class=" row">
                        <div class="form-group col-lg-3">
                            <label class="col-lg-4 control-label" for="Number">Role</label>
                            <div class="col-lg-8">
                                <select class="form-control" required data-bind="options:$root.Roles,optionsText:'Name',optionsValue:'Id',optionsCaption:'Select',value:RoleId,event:{change:$root.GetModulesByRole}"></select>
                            </div>
                        </div>
                        <div class="form-group col-lg-3">
                            <label class="col-lg-4 control-label" for="Number">Module</label>
                            <div class="col-lg-8">
                                <select class="form-control" required data-bind="options:$root.Modules,optionsText:'Name',optionsValue:'Id',optionsCaption:'Select',value:$root.ModuleId,event:{change:$root.GetControllerByModule}"></select>
                            </div>
                        </div>
                        <div class="form-group col-lg-3">
                            <label class="col-lg-4 control-label" for="Number">Controller</label>
                            <div class="col-lg-8">
                                <select class="form-control" required data-bind="options:$root.Controllers,optionsText:'Name',optionsValue:'Id',optionsCaption:'Select',value:$root.ControllerId,event:{change:$root.GetActionByController}"></select>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-condensed table-bordered table-striped no-padding" data-bind="">
                                <thead class="bg-blue">
                                    <tr>
                                        <th class="col-lg-1"></th>
                                        <th class="col-lg-11">
                                            Action Name
                                        </th>
                                    </tr>
                                </thead>
                                <tbody data-bind="foreach:Actions">
                                    <tr>
                                        <td><input type="checkbox" data-bind="checked:Checked" /></td>
                                        <td data-bind="text:Name"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="box-footer">
                        <button data-bind="click:$root.Save" class="btn btn-primary"><i class="fa fa-file-o"></i> Save</button>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Info boxes -->

</section>
@if (Request.IsAjaxRequest())
{
    <script src="~/Scripts/App/Globals/Riddha.Globals.ko.js"></script>
    <script src="~/Areas/User/Scripts/Riddha.Script.UserRole.Permission.Model.js"></script>
    <script src="~/Areas/User/Scripts/Riddha.Script.UserRole.Permission.Controller.js"></script>
    <script src="~/Areas/User/Scripts/Riddha.Script.User.Model.js"></script>
    <script type="text/javascript">
        ko.cleanNode(document.getElementById("partial-render"));
        var obj = new actionPermissionController();
        ko.applyBindings(obj, document.getElementById("partial-render"));
    </script>
}
else
{
    @section scripts
    {
        <script src="~/Scripts/App/Globals/Riddha.Globals.ko.js"></script>
        <script src="~/Areas/User/Scripts/Riddha.Script.UserRole.Permission.Model.js"></script>
        <script src="~/Areas/User/Scripts/Riddha.Script.UserRole.Permission.Controller.js"></script>
        <script src="~/Areas/User/Scripts/Riddha.Script.User.Model.js"></script>
        <script type="text/javascript">
            var obj = new actionPermissionController();
            ko.applyBindings(obj);
        </script>
    }
}