@{
    ViewBag.Title = "Index";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout_Adminlte.cshtml";
}
<style>
</style>
<section class="content-header">
    <h1>
        @T("Payroll")
        <sup class="text-green">@T("Configuration")</sup>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @T("Home")</a></li>
        <li class="active">@T("Payroll")@T("Configuration")</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Company Modal -->
    <!-- Info boxes -->
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    &nbsp;
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <div class="btn-group">

                            <button type="button" class="btn btn-box-tool dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-wrench"></i>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Something else here</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                            </ul>
                        </div>
                        <button type="button" class="btn btn-box-tool text-red" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="box-body table-responsive ">
                    <div class="body">
                        <div class="form" data-bind="with:PayRollConfiguration">
                            <div class="form-group col-lg-4">
                                <label class="col-lg-4 control-label" for="Number"><u>@T("PresentInHoliday")</u></label>
                                <div class="col-lg-6">
                                </div>
                            </div>
                            <div class="form-group col-lg-4">
                                <label class="col-lg-4 control-label" for="Number"><u>@T("PresentInDayOff")</u></label>
                                <div class="col-lg-6">
                                </div>
                            </div>
                            <div class="form-group col-lg-4">
                                <label class="col-lg-4 control-label" for="Number"><u>@T("InsuranceContributionByEmployer")</u></label>
                                <div class="col-lg-6">
                                </div>
                            </div>
                            <div class="form-group col-lg-4">
                                <label class="col-lg-4 control-label" for="Number">@T("OT") @T("Allow")</label>
                                <div class="col-lg-6">
                                    <input type="radio" name="Holiday" value="0" data-bind="checked:PresentInHoliday" />
                                </div>
                            </div>
                            <div class="form-group col-lg-4">
                                <label class="col-lg-4 control-label" for="Number">@T("OT") @T("Allow")</label>
                                <div class="col-lg-6">
                                    <input type="radio" value="0" name="DayOff" data-bind="checked:PresentInDayOff" />
                                </div>
                            </div>
                            <div class="form-group col-lg-4">
                                <label class="col-lg-4 control-label" for="Number">@T("Percentage")</label>
                                <div class="col-lg-6">
                                    <input type="text" name="InsuranceContributionByEmpyr" value="0" data-bind="value:InsuranceContributionByEmpyr" />
                                </div>
                            </div>
                            <div class="form-group col-lg-4">
                                <label class="col-lg-4 control-label" for="Number">@T("Replacement") @T("Leave")</label>
                                <div class="col-lg-6">
                                    <input type="radio" value="1" name="Holiday" data-bind="checked:PresentInHoliday" />
                                </div>
                            </div>
                            <div class="form-group col-lg-4">
                                <label class="col-lg-4 control-label" for="Number">@T("Replacement") @T("Leave")</label>
                                <div class="col-lg-6">
                                    <input type="radio" value="1" name="DayOff" data-bind="checked:PresentInDayOff" />
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group col-lg-4">
                                <label class="col-lg-4 control-label" for="Number">@T("None")</label>
                                <div class="col-lg-6">
                                    <input type="radio" value="2" name="Holiday" data-bind="checked:PresentInHoliday" />
                                </div>
                            </div>
                            <div class="form-group col-lg-4">
                                <label class="col-lg-4 control-label" for="Number">@T("None")</label>
                                <div class="col-lg-6">
                                    <input type="radio" value="2" name="DayOff" data-bind="checked:PresentInDayOff" />
                                </div>
                            </div>

                            <div class="clearfix"></div>
                            <div class="form-group col-lg-12">
                                <div class="col-lg-5"></div>
                                <div class="col-lg-7">
                                    <input type="submit" data-bind="click:$root.CreateUpdate,createUpdateText:$root.ModeOfButton,actionVisibility:'7200'" name="Save" class="btn btn-success" value=@T("Save") />
                                    <input type="button" data-bind="click:$root.Reset" name=@T("Reset") value=@T("Reset") class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <!-- /.row -->
</section>

@if (Request.IsAjaxRequest())
{
    <script src="~/Areas/PayRoll/Scripts/Riddha.Script.PayrollConfiguration.Model.js"></script>
    <script src="~/Areas/PayRoll/Scripts/Riddha.Script.PayrollConfiguration.Controller.js"></script>
    <script type="text/javascript">
        var obj = {};
        Riddha.global.permission.action('8017').done(function (data) {
            Riddha.global.permission.actions = data.Data;
            ko.cleanNode(document.getElementById("partial-render"));
            obj = new payRollConfigurationController();
            ko.applyBindings(obj, document.getElementById("partial-render"));
        });
    </script>
}
else
{
    @section scripts
    {
        <script src="~/Areas/PayRoll/Scripts/Riddha.Script.PayrollConfiguration.Model.js"></script>
        <script src="~/Areas/PayRoll/Scripts/Riddha.Script.PayrollConfiguration.Controller.js"></script>
        <script type="text/javascript">
            var obj = {};
            Riddha.global.permission.action('8017').done(function (data) {
                Riddha.global.permission.actions = data.Data;
                ko.cleanNode(document.getElementById("partial-render"));
                obj = new payRollConfigurationController();
                ko.applyBindings(obj, document.getElementById("partial-render"));
            });
        </script>
    }
}




