<div style="    margin: 0 auto;
        max-width:1000px;
        width: 100%;
        border: solid 1px #eee;
        border-radius: 8px; " id="advice">

        <header>
            <br />
            <br />
            <p style="text-align:center;font-size:20px;font-weight:bold;line-height: 0px;">
                <b class="companyName text-xlarge"></b>
            </p>
            <p style="text-align:center;font-size:18px;">
                <text class="companyAddress"></text>

            </p>
            <p style="text-align:center;font-size:18px;font-weight:bold;line-height: 0px;">Payment Advice</p>
            <br />
            <br />
            <br />
        </header>

        <table>
            <thead>
            </thead>
            <tbody style="display: block;">
                <tr>
                    <td width="5%">
                        <img src="" width="100%">
                    </td>
                    <td width="90%" style="font-size: 18px;font-weight:bold">
                        <span style="float:left">
                            To <span data-bind="text:$root.PaymentAdviceMaster().To()">Manager</span>
                        </span>
                        <span style="float:right">
                            Date : <span data-bind="text:$root.PaymentAdviceMaster().Date()">2076.12.07</span>
                        </span>
                        <br />
                        <span data-bind="text:$root.PaymentAdviceMaster().BankName()">
                            Everest Bank Limited
                        </span><br />
                        <span data-bind="text:$root.PaymentAdviceMaster().BankAddress()">
                            Butwal
                        </span><br />
                    </td>
                    <td width="5%">
                        <img src="" width="100%">
                    </td>
                </tr>

                <tr>
                    <td width="5%"><img src="" width="100%"></td>
                    <td width="90%" valign="top">
                        <br />
                        <br />
                        <br />

                        <p style="line-height: 30px; font-size: 15px;">
                            Dear sir, <br />
                            Payment advice from       <span data-bind="text:$root.PaymentAdviceMaster().CompanyName()">
                            </span> A/C # for the month of <span data-bind="text:$root.PaymentAdviceMaster().Month()"></span>
                        </p>
                        <p style="line-height: 30px; font-size: 15px;">
                            Please make the payroll transfer from above account number to the employees in their
                            respective account number as per details below
                        </p>
                        <table style="font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;font-size: 15px;" id="paymentAdvicegrid">
                            <thead>
                                <tr>
                                    <th>S.N</th>
                                    <th>Account Name</th>
                                    <th>Amount</th>
                                    <th>Account Number</th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach:PaymentAdvices">
                                <tr>
                                    <td data-bind="serialNo:$index()+1"></td>
                                    <td data-bind="text:StaffName"></td>
                                    <td data-bind="text:Amount"></td>
                                    <td data-bind="text:BankAccountNo"></td>
                                </tr>

                            </tbody>
                            <tfoot>
                                <tr>
                                    <td></td>
                                    <td><strong>Total</strong></td>
                                    <td data-bind="text:$root.PaymentAdviceMaster().TotalAmount()"></td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                        <p style="line-height: 30px; font-size: 15px;">
                            Amount In words : <span data-bind="text:$root.PaymentAdviceMaster().AmountInWords()"></span>
                        </p>
                        <br />
                        <br />
                        <br />
                        <br />
                    </td>
                    <td width="5%"><img src="" width="100%"></td>
                </tr>

            </tbody>



        </table>
        <table>
            <tbody>
                <tr style="font-size: 15px;">
                    <td width="5%"><img src="" width="100%"></td>
                    <td width="20%">
                        <span style="float:left">Prepaid By :</span>
                    </td>
                    <td width="20%">
                        Checked By:
                    </td>
                    <td width="30%">
                        Approved By:
                    </td>
                    <td width="10%">
                        Authorized Bank Signature
                    </td>
                    <td width="10%"></td>
                </tr>
                <tr></tr>
                <tr></tr>
                <tr></tr>
            </tbody>
        </table>
        <footer></footer>

    </div>

