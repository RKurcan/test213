@if (Request.IsAjaxRequest())
{
    @*<script src="~/Areas/Scripts/Riddha.Script.Company.Model.js"></script>
        <script src="~/Areas/Scripts/Riddha.Script.Company.Controller.js"></script>*@
    <script type="text/javascript">
        ko.cleanNode(document.getElementById("partial-render"));
        var obj = new companyController('@DateTime.Now.ToString("yyyy/MM/dd")');
        ko.applyBindings(obj, document.getElementById("partial-render"));

        function RestrictSpace() {
            if (event.keyCode == 32) {
                event.returnValue = false;
                return false;
            }
        };
    </script>
}
else
{
    @section scripts
    {
        @*<script src="~/Areas/Scripts/Riddha.Script.Company.Model.js"></script>
            <script src="~/Areas/Scripts/Riddha.Script.Company.Controller.js"></script>*@
        <script type="text/javascript">
            var obj = new companyController('@DateTime.Now.ToString("yyyy/MM/dd")', '@DateTime.Now.AddYears(1).ToString("yyyy/MM/dd")');
            ko.applyBindings(obj);

            function RestrictSpace() {
                if (event.keyCode == 32) {
                    event.returnValue = false;
                    return false;
                }
            };
        </script>
    }
}
